<!DOCTYPE html>
<html>
<head>
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/style/main.css"> 
</head>
<body>
  <div id="leaderboard-container">
    <h2>Leaderboard</h2>
    <table id="leaderboard-table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Username</th>
          <th>Score</th>
          <th>Accuracy</th>
          <th>Max Combo</th>
          <th>Mods</th>
          <th>Date Achieved</th>
        </tr>
      </thead>
      <tbody>
        <% leaderboard.forEach((entry, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= entry.username %></td>
            <td><%= entry.score %></td>
            <td><%= entry.accuracy %></td>
            <td><%= entry.max_combo %></td>
            <td><%= entry.mods %></td>
            <td><%= entry.date_achieved %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="/scripts/leaderboard.js"></script> 
</body>
</html>
